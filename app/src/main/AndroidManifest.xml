        android:supportsRtl="true"
        android:theme="@style/Theme.MyUaeGuide"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".helperClasses.HomeAdapter.Featured.ShowFeaturedPlace"
