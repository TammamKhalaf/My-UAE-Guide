<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="200dp">


        <ImageView
            android:id="@+id/mv_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/mv_rating"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/mv_desc"
            android:scaleType="centerInside"
            android:src="@drawable/beds" />

        <TextView
            android:id="@+id/mv_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="start"
            android:fontFamily="@font/baloo"
            android:text="McDonald"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mv_desc"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/mv_rating"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/adamina"
            android:padding="20dp"
            android:text="Welcome To Our Hotel Welcome To Our HotelWelcome To "
            android:textSize="10sp" />

        <RatingBar
            android:id="@+id/mv_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mv_title"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:rating="4.5" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>