<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_8sdp"
    android:layout_margin="@dimen/_10sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_200sdp">


        <ImageView
            android:id="@+id/mv_image"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_below="@+id/mv_rating"
            android:layout_margin="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/beds"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/mv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="20dp"
            android:fontFamily="@font/baloo"
            android:text="McDonald"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/mv_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mv_desc"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:fontFamily="@font/adamina"
            android:padding="20dp"
            android:text="Welcome To Our To "
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mv_image"
            app:layout_constraintTop_toTopOf="@+id/mv_image" />

        <RatingBar
            android:id="@+id/mv_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:rating="4.5"
            app:layout_constraintBottom_toTopOf="@+id/mv_desc"
            app:layout_constraintStart_toStartOf="@+id/mv_title"
            app:layout_constraintTop_toBottomOf="@+id/mv_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>